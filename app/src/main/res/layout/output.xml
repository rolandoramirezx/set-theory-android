<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.rolandoramirezx.settheoryandroid.MainActivity"
        tools:layout_editor_absoluteY="81dp" tools:layout_editor_absoluteX="0dp">

    <EditText
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/editText"
            android:text="@string/Ouput_Language"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/Input" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"/>
    <EditText
            android:layout_width="359dp"
            android:layout_height="186dp"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/Input"
            android:shadowColor="@android:color/background_dark" android:background="@android:color/darker_gray"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toTopOf="@+id/Calculate"
            android:layout_marginRight="8dp" app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp" app:layout_constraintLeft_toLeftOf="parent"/>
    <Button
            android:text="Return"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:id="@+id/Calculate"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"/>
</android.support.constraint.ConstraintLayout>
